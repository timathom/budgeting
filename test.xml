<?xml version="1.0" encoding="UTF-8"?>
<group
  id="suite"
  model="test"
  ref="scenarios"
  xmlns="http://www.w3.org/2002/xforms"
  xmlns:ev="http://www.w3.org/2001/xml-events">
  <label>Suite</label>
  <!-- Scenarios -->
  <repeat
    id="scenario-repeat"
    ref="scenario">
    <var
      name="s"
      value="count(. | preceding-sibling::scenario)"/>
    <group>
      <label>
        <output
          value="concat($s, '. ', @label)"/>
      </label>
      <repeat
        id="test-repeat"
        ref="test">
        <var
          name="t"
          value="count(. | preceding-sibling::test)"/>
        <group>
          <label>
            <output
              value="concat($s, '.', $t, ' ', @label)"/>
          </label>
          <!-- Result -->
          <group
            id="suite-results">
            <output
              value="choose(@passed[normalize-space(.)] = true(), 'passed', 'failed')"/>
          </group>
        </group>
      </repeat>
    </group>
  </repeat>
  <!-- Test runner -->
  <group
    id="test-runner"
    model="test"
    ref="scenarios">
    <action
      ev:event="run-test"
      iterate="scenario/test">
      <message>
        <output
          value="@name"/>
      </message>
      <!-- Test 1.1 -->
      <action
        if="@name = 'login-form-displayed'">
        <setvalue
          ref="result"
          value="assertDisplayed('user-login')"/>
      </action>
      <!-- Test 1.2 -->
      <action
        if="@name = 'rest-of-form-hidden'">
        <setvalue
          ref="result"
          value="assertDisplayed('hide-login')"/>
      </action>
      <!-- Test 2.1 -->
      <action
        if="@name = 'login-form-enabled'">
        <delete
          at="1"
          model="app"
          ref="instance('login')/login/user"/>
        <insert
          at="1"
          context="instance('login')/login"
          model="app"
          origin="instance('proto')/login/user"
          position="before"
          ref="*"/>
        <!-- Only a submit action seems to update the input value in the view -->
        <send
          submission="refresh-test-model"/>
        <setvalue
          ref="result"
          value="getInputValue('user-login')"/>
      </action>
      <!-- Test -->

      <setvalue
        ref="@passed"
        value="../result = ../expected"/>
    </action>
  </group>
</group>
